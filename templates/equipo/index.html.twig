{% extends 'base.html.twig' %}

{% block title %}Equipo index{% endblock %}

{% block body %}
    <h1>Equipo index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Tipo</th>
                <th>Marca</th>
                <th>Modelo</th>
                <th>NumeroSerie</th>
                <th>Estado</th>
                <th>FechaAdquisicion</th>
                <th>Ubicacion</th>
                <th>Observaciones</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for equipo in equipos %}
            <tr>
                <td>{{ equipo.id }}</td>
                <td>{{ equipo.tipo }}</td>
                <td>{{ equipo.marca }}</td>
                <td>{{ equipo.modelo }}</td>
                <td>{{ equipo.numeroSerie }}</td>
                <td>{{ equipo.estado }}</td>
                <td>{{ equipo.fechaAdquisicion ? equipo.fechaAdquisicion|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ equipo.ubicacion }}</td>
                <td>{{ equipo.observaciones }}</td>
                <td>
                    <a href="{{ path('app_equipo_show', {'id': equipo.id}) }}">show</a>
                    <a href="{{ path('app_equipo_edit', {'id': equipo.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="10">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_equipo_new') }}">Create new</a>
{% endblock %}
